<% content_for :page_title do %>
    <%= link_to t(:blog_posts, scope: 'blog.posts'), admin_blog_posts_path %> / <%= @post.title %>
<% end %>

<% if Spreeblog.configuration.include_comments == :active_record %>
  <% content_for :sidebar do %>
      <ul class="nav nav-pills nav-stacked" data-hook="admin_product_import_tabs">
        <%= content_tag :li, class: ('active' if current == :post) do %>
            <%= link_to_with_icon 'edit', t(:post, scope: 'blog.admin.posts'), edit_admin_blog_post_url(@post) %>
        <% end %>
        <%= content_tag :li, class: ('active' if current == :comments) do %>
            <%= link_to_with_icon 'picture', t(:comments, scope: 'blog.admin.posts'), admin_blog_post_comments_url(@post) %>
        <% end %>
      </ul>
  <% end %>
<% end %>
